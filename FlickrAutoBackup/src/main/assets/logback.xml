<configuration>


    <!-- Create a file appender for a log in the application's data directory -->
    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/data/data/com.smaxll.apps.android.flickrautobackup/files/log/flickruploader.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>/data/data/com.smaxll.apps.android.flickrautobackup/files/log/flickruploader.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>2MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>3</maxHistory>
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>debug</level>
        </filter>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %class{0}.%method:%L > %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="logcat" class="ch.qos.logback.classic.android.LogcatAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>trace</level>
        </filter>
        <encoder>
            <pattern>%class{0}.%method:%L > %msg</pattern>
        </encoder>
        <tagEncoder>
            <pattern>FlickrUploader</pattern>
        </tagEncoder>
    </appender>


    <!-- Write INFO (and higher-level) messages to the log file -->
    <ROOT>
        <appender-ref ref="file" />
        <appender-ref ref="logcat" />
    </ROOT>
</configuration>